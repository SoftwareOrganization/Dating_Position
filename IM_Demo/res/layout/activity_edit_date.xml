<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >
    
     <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/common_actionbar"
        android:layout_height="wrap_content">
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_width="fill_parent">
            
            <TextView 
                android:id="@+id/edit_date_name"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="聚会名称"
                android:layout_height="wrap_content"/>
            
            <EditText 
                android:id="@+id/edit_date_name_et"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/edit_date_name"
                android:layout_height="40dp"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_width="fill_parent">
            
            <TextView 
                android:id="@+id/edit_date_desc"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="聚会描述"
                android:layout_height="wrap_content"/>
            
            <EditText 
                android:id="@+id/edit_date_desc_et"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/edit_date_desc"
                android:layout_height="40dp"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_width="fill_parent">
            
            <TextView 
                android:id="@+id/edit_date_time"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="聚会时间"
                android:layout_height="wrap_content"/>
            
            <EditText 
                android:id="@+id/edit_date_time_et"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:editable="false"
                android:layout_toRightOf="@+id/edit_date_time"
                android:layout_height="40dp"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_width="fill_parent">
            
            <TextView 
                android:id="@+id/edit_date_position"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="聚会地点"
                android:layout_height="wrap_content"/>
            
            <EditText 
                android:id="@+id/edit_date_position_et"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:editable="false"
                android:layout_toRightOf="@+id/edit_date_position"
                android:layout_height="40dp"/>
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_width="fill_parent">
            
            <TextView 
                android:id="@+id/edit_date_member"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="聚会成员"
                android:layout_height="wrap_content"/>
            
            <EditText 
                android:id="@+id/edit_date_member_et"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:editable="false"
                android:layout_toRightOf="@+id/edit_date_member"
                android:layout_height="40dp"/>
            
        </RelativeLayout>
        
    </LinearLayout>

</RelativeLayout>
